--update and draw

function _update()
  player_update()
  player_animate()

  --simple camera
  cam_x=player.x-64+(player.w/2)
  if cam_x<map_start then
     cam_x=map_start
  end
  if cam_x>map_end-128 then
     cam_x=map_end-128
  end
  cam_y=player.y-82+(player.h/2)
  
  camera(cam_x,cam_y)
end

function _draw()
  cls()
  map(0,0)
  map(0,16, 1024, 0)
  spr(player.sp,player.x,player.y,1,1,player.flp)
end


